---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: pastefy-prod
  annotations:
    kubernetes.io/ingress.class: "nginx"
    cert-manager.io/cluster-issuer: "letsencrypt-prod"
spec:
  tls:
  - hosts:
      - pastefy.ga
      - www.pastefy.ga
    secretName: pastefy-prod-ssl
  rules:
  - host: pastefy.ga
    http:
      paths:
      - pathType: Prefix
        path: /
        backend:
          service:
            name: pastefy-prod
            port:
              number: 80
  - host: www.pastefy.ga
    http:
      paths:
      - pathType: Prefix
        path: /
        backend:
          service:
            name: pastefy-prod
            port:
              number: 80